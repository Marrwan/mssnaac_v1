                  <li class="page-item">
                    <a  href="?page=<%=  parseInt(page) - 1%>" class="page-link waves-effect waves-effect <%= page == 1? "disabled" : '' %> " aria-label="Previous">
                      <span aria-hidden="true">«</span>
                      <span class="sr-only">Previous</span>
                    </a>
                  </li>

                  <%# Numbers d%>
                  <% blogs_chunks .forEach((post,i) =>{ %> 
                    <%# Numbers d%>
