
<style>
    html,
    body,
    header,
    .view {
      height: 415px;
      margin-top: 30px;
    }
    @media (max-width: 740px) {
      html,
      body,
      header,
      .view {
        height: 615px;
      }
    }
    @media (min-width: 800px) and (max-width: 850px) {         
      html,
      body,
      header,
      .view {
        height: 600px;
      }
    }
  </style>
<section class="view intro-2" style="background-image: url('/img/sample.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center;">
    <div class="mask rgba-gradient-1">
      <div class="container h-100 d-flex justify-content-center align-items-center">
        <div class="row">
          <div class="col-md-12 wow fadeIn mb-3">
            <div class="card card-body rgba-green-slight text-center green-text">
              <ul class="list-unstyled py-5 mx-lg-5">
                <li>
                  <h1 class="display-1 mt-5 mx-5 mt-lg-0 mb-5 font-weight-bold green-text wow fadeIn"
                    data-wow-delay="0.3s">
                    <strong>Error <%=status%></strong>
                  </h1>
                </li>
                <li>
                  <h4 class="green-text description mb-4 wow fadeIn" data-wow-delay="0.4s"><%= message %>
                  </h4>
                  <p class="green-text description pb-5 wow fadeIn" data-wow-delay="0.4s"> The page you're looking
                    for is not found, Please try later or back to
                    <a href="/" class="font-weight-bold">Home</a>
                  </p>

                  <!-- Facebook -->
                  <a href="/facebook" target="_blank" class="p-2 m-2 fa-lg fb-ic">
                    <i class="fab fa-facebook-f white-text"> </i>
                  </a>
                  <!-- Twitter -->
                  <a href="/twitter" target="_blank" class="p-2 m-2 fa-lg tw-ic">
                    <i class="fab fa-twitter white-text"> </i>
                  </a>
                  <!-- Whatsapp  -->
                  <a href="/whatsapp" target="_blank" class="p-2 m-2 fa-lg gplus-ic">
                    <i class="fab fa-whatsapp white-text"> </i>
                  </a>
                 
                </li>
              </ul>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

 